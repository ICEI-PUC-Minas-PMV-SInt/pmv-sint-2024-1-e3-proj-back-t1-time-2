@model ShapeApp.Models.DadosCadastro

@{
    ViewData["Title"] = "Remoção de usuario";
}

<h1>Remoção de Usuario</h1>

<h3>Tem certeza que deseja apagar esse usuario?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Usuario.Perfil)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Usuario.Perfil)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PerfilShape.Idade)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerfilShape.Idade)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PerfilShape.Altura)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerfilShape.Altura)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PerfilShape.Peso)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerfilShape.Peso)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PerfilShape.Nivel)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PerfilShape.Nivel)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Usuario.Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-info">Voltar</a>
    </form>
</div>
