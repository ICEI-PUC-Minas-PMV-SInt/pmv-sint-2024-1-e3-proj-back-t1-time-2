@model ShapeApp.Models.MensagensHome

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que quer deletar essa mensagem?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TituloMensagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TituloMensagem)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Mensagem)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Mensagem)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <a class="btn btn-primary" asp-action="EdicaoMensagens">Voltar</a>
        <input type="submit" value="Deletar" class="btn btn-danger" />
    </form>
</div>
