@model ShapeApp.Models.Treino

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de Exercícios</h1>

<p>
    <a asp-action="AddExercicio" class="btn btn-success" asp-route-id="@Model.Id">Adicionar Exercícios</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                Series
            </th>
            <th>
                Repetições
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Exercicios)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Series)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Repeticoes)
                </td>
                <td>
                    <a class="btn btn-danger" asp-action="RemoverExercicio" asp-route-id="@Model.Id" asp-route-exericioid="@item.Id">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
